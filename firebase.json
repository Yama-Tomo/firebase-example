{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "predeploy": [
      "cd packages/site && yarn build",
      "./deploy/prepare_site_file.sh"
    ],
    "public": "dist/site",
    "rewrites": [
      {
        "source": "**",
        "function": "basicAuthSiteHosting"
      }
    ],
    "ignore": [
      "**/.*"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  }
}
