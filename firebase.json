{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [
    {
      "target": "site",
      "predeploy": [
        "cd packages/site && yarn build",
        "./deploy/prepare_site_file.sh"
      ],
      "public": "dist/site",
      "rewrites": [
        {
          "source": "**",
          "function": "basicAuthSiteHosting"
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "cms",
      "predeploy": [
        "cd packages/cms && yarn build",
        "./deploy/prepare_cms_file.sh"
      ],
      "public": "dist/cms",
      "rewrites": [
        {
          "source": "**",
          "function": "basicAuthCmsHosting"
        }
      ],
      "ignore": [
        "**/.*"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  }
}
